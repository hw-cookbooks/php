<% if @disable_sections %>
<% @settings.each do |key, value| -%>
<% next if value.nil? %>
<%= key %> = <%= 
  case value
  when Numeric
    value
  when TrueClass
    'On'
  when FalseClass
    'Off'
  else
    value.upcase == value ? value : "'#{value}'"
  end
%>
<% end %>
<% else %>
<% @settings.each do |section, settings| -%>
[<%= section %>]
<% settings.each do |key, value| -%>
<% next if value.nil? %>
<%= key %> = <%= 
  case value
  when Numeric
    value
  when TrueClass
    'On'
  when FalseClass
    'Off'
  else
    value.upcase == value ? value : "'#{value}'"
  end
%>
<% end %>
<% end %>
<% end %>
